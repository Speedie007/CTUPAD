@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Categories</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Category</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.CategoryID">Edit</a> |
                <a asp-action="Details"class="btn btn-secondary" asp-route-id="@item.CategoryID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger"asp-route-id="@item.CategoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

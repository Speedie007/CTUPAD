@model IEnumerable<CategoryCritearia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criteria</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryCriteariaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryCriteariaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary"asp-route-id="@item.CategoryCriteariaID">Edit</a> |
                <a asp-action="Details" class="btn btn-info"asp-route-id="@item.CategoryCriteariaID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger"asp-route-id="@item.CategoryCriteariaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

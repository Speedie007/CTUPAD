@model IEnumerable<Contestant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContestantFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContestantLastName)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContestantFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContestantLastName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ContestantID">Edit</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.ContestantID">Details</a> |
                <a asp-action="Delete"  class="btn btn-danger"asp-route-id="@item.ContestantID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
